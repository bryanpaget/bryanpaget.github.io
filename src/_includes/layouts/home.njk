---
layout: layouts/base.njk
templateClass: tmpl-home
---

<div class="wrapper home card">
    <div class="content">
    {{ content | safe }}
    <ul>
      {%- set latest_posts = collections.posts -%}
      {%- for post in latest_posts.slice(0, 10) -%}
        <li{% if page.url == post.url %} aria-current="page"{% endif %}>
        <a href='{{ post.url }}'>{{ post.data.title }}</a></li>
      {%- endfor -%}
      <li><a href="/posts"><em>View all posts...</em></a></li>
    </ul>
  </div>
</div>

