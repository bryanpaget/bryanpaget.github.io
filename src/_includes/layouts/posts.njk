---
layout: layouts/base.njk
templateClass: tmpl-home
---

<div class="wrapper home card">
  <div class="content">

    {{ content | safe }}

    <ul class="posts">
        {% for post in collections.posts %}

            <li class="no-bullets"

                {% if page.url == post.url %}

                    aria-current="page"

                {% endif %}>


                <h4>
                    <a href='{{ post.url }}'>

                    {{ post.data.title }}

                    </a>
                </h4>

                <p class="small">

                {{ post.data.description }}

                </p>
            </li>

        {% endfor %}
    </ul>

  </div>
</div>
